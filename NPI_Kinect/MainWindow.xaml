<Window x:Class="NPI_Kinect.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NPI_Kinect_basicRecognition" Height="450" Width="672"  Loaded="WindowLoaded" Closing="WindowClosing">
    <Grid Name="mainGrid">
        <Grid Name="ImageGrid" Margin="0,0,0,96">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Image Name="Image"/>
            <Image x:Name="Skeleton" />
        </Grid>
        <StatusBar HorizontalAlignment="Stretch" Name="statusBar" VerticalAlignment="Bottom" Background="Red" Foreground="Black" Height="42" Margin="0,0,0,49">
            <TextBlock x:Name="instructionsText" HorizontalAlignment="Stretch" Height="36" Width="664" FontSize="20" > Texto de prueba</TextBlock>
        </StatusBar>
        <StatusBar HorizontalAlignment="Stretch" x:Name="statusBar_Copy" VerticalAlignment="Bottom" Background="Red" Foreground="Black" Height="42" Margin="0,0,0,10">
            <TextBlock x:Name="positionCuesHelp" HorizontalAlignment="Stretch" Height="36" Width="664" FontSize="20" ><Run Text="Texto de prueba"/></TextBlock>
        </StatusBar>
    </Grid>
</Window>
